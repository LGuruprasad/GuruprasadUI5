<mvc:View xmlns:table="sap.ui.table" xmlns:core="sap.ui.core" controllerName="MyApp.controller.POList" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" >
   <Page showHeader="false">
        <l:VerticalLayout >
            <ObjectHeader title="Purchase Orders" >
                <attributes>
                    <ObjectAttribute text="Total POs: {/POLIst/length}" />
                </attributes>
            </ObjectHeader>
   <Table id="poTable" items="{/C_MM_MaterialGroupValueHelp}" growing="true" growingThreshold="50" growingScrollToLoad="true">
   <columns>
     <Column >
	   <Text text="Material Group"/>
	 </Column>
     <Column >
	   <Text text="Material Group Text"/>
	 </Column>
     <Column >
	   <Text text="Material Group Name"/>
	 </Column>
	 
   </columns>
   <items>
      <ColumnListItem type="Active" press="gotoDetail">
         <cells>
		   <Text text="{MaterialGroup}"/>
		   <Text text="{MaterialGroupText}"/>
           <Text text="{MaterialGroupName}"/>
		  
       <Button text="{i18n>details}" press="showpopup"></Button>
		 </cells>
      </ColumnListItem>
   </items>
   </Table>
       </l:VerticalLayout>
</Page>
</mvc:View>