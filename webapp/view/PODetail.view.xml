<mvc:View xmlns:core="sap.ui.core" controllerName="MyApp.controller.PODetail" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox>
		<f:SimpleForm
			layout="ResponsiveGridLayout"
			title="Demo" >
			<f:content>
				<Label text="{i18n>poNumber}" />
				<Text id="value1" text="{poNumber}" />
				<Label text="{i18n>description}" />
				<Text id="value2" text="{description}" ></Text>
				<Text id="value3" text="{totalAmount} {currency}" ></Text>
				<Text text="{parts: ['totalAmount' , 'currency'], formatter: '.listOfFunctions.toTwoDecimals'}" ></Text>
				<Label text="{i18n>amount}" />
				<Text text="{= ${totalAmount}  + 100 }"></Text>
					<Label text="{i18n>amount}" />
				<Text text="{= ${totalAmount}  !== 2000 ? 'High' : 'Low' }"></Text>
			</f:content>
		</f:SimpleForm>
        <Button text="{i18n>gotoPO}" press=".gotohome"/>		
    </VBox>
</mvc:View>